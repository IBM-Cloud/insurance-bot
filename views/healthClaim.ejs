<!DOCTYPE html>
<html>
<head>
  <% include partials/template/head.ejs %>
</head>

<body class="<%= page %>">

<div class="container">
  <div class="outline">
    <% include partials/template/header.ejs %>

    <% include partials/template/headEnding.ejs %>


    <section class="layout">
      <div class="primary">

        <div id="fb-root"></div>


        <div class="welcome">

                    <div class="userInsurance">

                      <div class="ui-userInfo">
                        <div class="userTypeHeading">Make a Claim</div>
                        <ul>
                            <form class="editUserForm" action="/processClaim" method="post">
                              <li>Account Reference: <span name="userid" ><%= memberData.id %></span></li>
                              <li style=" display:none " ><input  type="label"  name="userid" value="<%= memberData.id %>"></input></li>
                              <li>Full Name: <span name="fullname" ><%= memberData.name %> </span></li>
                              <li style=" display:none " ><input  type="label"  name="fullName" value="<%= memberData.name %>"></input></li>

                              <li>Select Cover Type:
                                <select class="selectcoverType" data-style="btn-info" name="type">
                                <optgroup label="Select Type">
                                  <%
                                  var CCategories = memberData.policies[0].categories;
                                  var cat_i, cov_i;
                                  for(cat_i=0; cat_i<CCategories.length; cat_i++)
                                  {
                                    for(cov_i=0; cov_i<CCategories[cat_i].coverage.length; cov_i++)
                                    {
                                    %>
                                      <option name="coverType" value="<%=CCategories[cat_i].coverage[cov_i].item %>" > <%=CCategories[cat_i].coverage[cov_i].item %> </option>
                                    <%
                                    }
                                  }
                                  %>
                                </optgroup>
                                </select>
                              </li>
                              <li>Amount to claim: <input type="text"  name="claimamount" value=""></input></li>

                              <br><li class="edit_account_details"><input type="submit" value="Submit Claim" /></li>
                          </form>
                        </ul>
                      </div>
                    </div>

        </div>


      </div><!-- primary section -->
      <aside class="secondary">
      </aside><!-- secondary -->
    </section><!-- layout section -->
  </div>
</div>
<% include partials/template/footer.ejs %>
<% include partials/template/analytics.ejs %>

</body>
</html>
